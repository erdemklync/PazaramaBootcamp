<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="strokeColor">#B4B4B4</item>
        <item name="endIconTint">#B4B4B4</item>
        <item name="hintTextColor">#B4B4B4</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">28dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppButton.Filled" parent="AppButton">
        <item name="backgroundTint">@color/purple</item>
    </style>

    <style name="AppButton.Outlined" parent="AppButton">
        <item name="android:textColor">@color/purple</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/purple</item>
    </style>
</resources>